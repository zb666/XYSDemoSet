<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DemoActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/tvTop"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/bg"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="5dp"
        android:gravity="center"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="5dp"
        android:text="+关注"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/llColorContainer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_left"
        android:gravity="center"
        tools:showIn="@layout/activity_demo">

        <LinearLayout
            android:id="@+id/llMove"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivFocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_guanzhu" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFocus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSwitch"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:text="开关" />


    <ViewStub
        android:id="@+id/viewstub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout="@layout/demo_vb" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/forever"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabIndicatorHeight="10dp"
                app:tabSelectedTextColor="@android:color/holo_orange_light" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbottom"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_40">

            <com.example.mechrevo.xysdemoset.view.LoveLayout
                android:id="@+id/lllayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ovl" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
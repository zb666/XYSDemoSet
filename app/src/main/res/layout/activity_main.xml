<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.mechrevo.xysdemoset.view.StatusChangeView
        android:id="@+id/statusChangeView"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_ovl" />

    <Button
        android:id="@+id/btn_press"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="点赞" />

    <com.example.mechrevo.xysdemoset.view.LoveLayout
        android:id="@+id/ll_love"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>